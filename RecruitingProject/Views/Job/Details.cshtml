@{Layout = null; }
@model RecruitingProject.Entity.Job
@{
    ViewBag.Title = "Details";
}

<link rel="stylesheet" type="text/css" href="~/Template/assets/css/bootstrap.min.css">

<link rel="stylesheet" type="text/css" href="~/Template/assets/css/font-awesome.css">

<link rel="stylesheet" href="~/Template/assets/css/style.css">

<header class="header-area header-sticky">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav class="main-nav">
                    <!-- ***** Logo Start ***** -->
                    <a href="index.html" class="logo">Job Agency<em> Website</em></a>
                    <!-- ***** Logo End ***** -->
                    <!-- ***** Menu Start ***** -->
                    <ul class="nav">
                        <li><a href="" class="">Home</a></li>
                        <li><a href="">Jobs</a></li>
                        <li style="color:black;">@Html.Partial("_LoginPartial")</li>

                    </ul>
                    <a class='menu-trigger'>
                        <span>Menu</span>
                    </a>
                    <!-- ***** Menu End ***** -->
                </nav>
            </div>
        </div>
    </div>
</header>
<!-- ***** Header Area End ***** -->
<!-- ***** Call to Action Start ***** -->
<section class="section section-bg" id="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <br>
                    <br>
                    <h2><em>$@Model.Amount</em></h2>
                    <p>@Model.JobName</p>

                    <div class="main-button">
                        @Html.ActionLink("Apply for the job", "Index", "ApplyForJob", new {id = Model.Id }, null )
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Call to Action End ***** -->
<!-- ***** Fleet Starts ***** -->
<section class="section" id="trainers">
    <div class="container">
        <br>
        <br>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src=@Url.Content("/Template/assets/images/job-image-1-1200x600.jpg") alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@Url.Content("/Template/assets/images/job-image-1-1200x600.jpg") alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src=@Url.Content("/Template/assets/images/job-image-1-1200x600.jpg") alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <br>
        <br>

        <div class="row" id="tabs">
            <div class="col-lg-4">
                <ul>
                    <li><a href='#tabs-1'><i class="fa fa-cog"></i> Job Description</a></li>
                    <li><a href='#tabs-2'><i class="fa fa-info-circle"></i> About Employer</a></li>
                    <li><a href='#tabs-3'><i class="fa fa-phone"></i> Contact Details</a></li>
                </ul>
            </div>
            <div class="col-lg-8">
                <section class='tabs-content' style="width: 100%;">
                    <article id='tabs-1'>
                        <h4>Job Description</h4>
                        <p>@Model.JobDescription</p>

                       
                    </article>

                    <article id='tabs-2'>
                        <h4>About Employer</h4>
                        <p>@Model.AboutEmployer</p>
                    </article>

                    <article id='tabs-3'>
                        <h4>Contact Details</h4>

                        <div class="row">
                            <div class="col-sm-6">
                                <label>Name</label>

                                <p>@Model.EmployerName</p>
                            </div>
                            <div class="col-sm-6">
                                <label>Phone</label>

                                <p>@Model.OfficeLine</p>
                            </div>
                            <div class="col-sm-6">
                                <label>Mobile phone</label>
                                <p>@Model.MobileNumber </p>
                            </div>
                            <div class="col-sm-6">
                                <label>Email</label>
                                <p><a href="#">@Model.Email</a></p>
                            </div>
                            <div class="col-sm-6">
                                <label>Website</label>
                                <p><a href="@Model.Website">@Model.Website</a></p>
                            </div>
                        </div>
                    </article>
                </section>
            </div>
        </div>
    </div>
</section>
<!-- ***** Fleet Ends ***** -->
<!-- jQuery -->
<script src=@Url.Content("~/Template/assets/js/jquery-2.1.0.min.js")></script>

<!-- Bootstrap -->
<script src=@Url.Content("~/Template/assets/js/popper.js")></script>
<script src=@Url.Content("Template/assets/js/bootstrap.min.js")></script>

<!-- Plugins -->
<script src=@Url.Content("~/Template/assets/js/scrollreveal.min.js")></script>
<script src=@Url.Content("~/Template/assets/js/waypoints.min.js")></script>
<script src=@Url.Content("~/Template/assets/js/jquery.counterup.min.js")></script>
<script src=@Url.Content("~/Template/assets/js/imgfix.min.js")></script>
<script src=@Url.Content("~/Template/assets/js/mixitup.js")></script>
<script src=@Url.Content("~/Template/assets/js/accordions.js")></script>

<!-- Global Init -->
<script src=@Url.Content("~/Template/assets/js/custom.js")></script>
