@{Layout = null; }
@model RecruitingProject.Models.AcceptAndRejectViewModel
@{
    ViewBag.Title = "Index";
}

<link rel="icon" type="image/png" sizes="16x16" href="~/Template/Dashboard/plugins/images/favicon.png">
<link href="~/Template/Dashboard/plugins/bower_components/chartist/dist/chartist.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/Template/Dashboard/plugins/bower_components/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.css">
<link href="~/Template/Dashboard/css/style.min.css" rel="stylesheet">


<div id="main-wrapper" data-layout="vertical" data-navbarbg="skin5" data-sidebartype="full"
     data-sidebar-position="absolute" data-header-position="absolute" data-boxed-layout="full">

    <header class="topbar" data-navbarbg="skin5">
        <nav class="navbar top-navbar navbar-expand-md navbar-dark">
            <div class="navbar-header" data-logobg="skin6">
                <!-- ============================================================== -->
                <!-- Logo -->
                <!-- ============================================================== -->
                <a class="navbar-brand" href="dashboard.html">
                    <!-- Logo icon -->
                    <b class="logo-icon">
                        <!-- Dark Logo icon -->
                        <img src=@Url.Content("/Template/Dashboard/plugins/images/logo-icon.png") alt="homepage" />
                    </b>
                    <span class="logo-text">
                        Admin
                    </span>
                </a>
                <!-- ============================================================== -->
                <!-- toggle and nav items -->
                <!-- ============================================================== -->
                <a class="nav-toggler waves-effect waves-light text-dark d-block d-md-none"
                   href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
            </div>
            <!-- ============================================================== -->
            <!-- End Logo -->
            <!-- ============================================================== -->
            <div class="navbar-collapse collapse" id="navbarSupportedContent" data-navbarbg="skin5">
                <ul class="navbar-nav d-none d-md-block d-lg-none">
                    <li class="nav-item">
                        <a class="nav-toggler nav-link waves-effect waves-light text-white"
                           href="javascript:void(0)"><i class="ti-menu ti-close"></i></a>
                    </li>
                </ul>
                <!-- ============================================================== -->
                <!-- Right side toggle and nav items -->
                <!-- ============================================================== -->
                <ul class="navbar-nav ml-auto d-flex align-items-center">
                    <!-- ============================================================== -->
                    <!-- Search -->
                    <!-- ============================================================== -->
                    <li class=" in">
                        <form role="search" class="app-search d-none d-md-block mr-3">
                            <input type="text" placeholder="Search..." class="form-control mt-0">
                            <a href="" class="active">
                                <i class="fa fa-search"></i>
                            </a>
                        </form>
                    </li>
                    <!-- ============================================================== -->
                    <!-- User profile and search -->
                    <!-- ============================================================== -->
                    <li>
                        <a class="profile-pic" href="#">
                            <img src=@Url.Content("/Template/Dashboard/plugins/images/users/varun.jpg") width="36"
                                 class="img-circle"><span class="text-white font-medium"></span>
                        </a>
                    </li>
                    <!-- ============================================================== -->
                    <!-- User profile and search -->
                    <!-- ============================================================== -->
                    <li >
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <!-- ============================================================== -->
    <!-- End Topbar header -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Left Sidebar - style you can find in sidebar.scss  -->
    <!-- ============================================================== -->
    <aside class="left-sidebar" data-sidebarbg="skin6">
        <!-- Sidebar scroll-->
        <div class="scroll-sidebar">
            <!-- Sidebar navigation-->
            <nav class="sidebar-nav">
                <ul id="sidebarnav">
                    <!-- User Profile-->
                    <li class="sidebar-item pt-2">
                        <a class="sidebar-link waves-effect waves-dark sidebar-link" href=""
                           aria-expanded="false">
                            <i class="far fa-clock" aria-hidden="true"></i>
                            <span class="hide-menu">Dashboard</span>
                        </a>
                    </li>
                    <li style="margin-top:30px;">
                            <span style="padding-left:30px" >
                                @Html.ActionLink("Get All Avaliable Jobs", "GETAllAvaliableJobs", "Admin")
                            </span>  
                    </li>

                    <li style="margin-top:30px;">
                        <span style="padding-left:30px;  ">
                            @Html.ActionLink("Get All Submitted Application", "GetAllSubmittedApplication", "Admin")
                        </span>
                    </li>

                    <li style="margin-top:30px;">
                        <span style="padding-left:30px;  ">
                            @Html.ActionLink("Get All Applicants", "GetAllApplicants", "Admin")
                        </span>
                    </li>

                    <li style="margin-top:30px;">
                        <span style="padding-left:30px; ">
                            @Html.ActionLink("Add a New Job", "New", "Job")
                        </span>
                    </li>
                </ul>

            </nav>
            <!-- End Sidebar navigation -->
        </div>
        <!-- End Sidebar scroll-->
    </aside>
 
    <!-- Page wrapper  -->
    <!-- ============================================================== -->
    <div class="page-wrapper">
        <!-- ============================================================== -->
        <!-- Bread crumb and right sidebar toggle -->
        <!-- ============================================================== -->
        <div class="page-breadcrumb bg-white">
            <div class="row align-items-center">
                <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                    <h4 class="page-title text-uppercase font-medium font-14">Dashboard</h4>
                </div>
                <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                    <div class="d-md-flex">
                        <ol class="breadcrumb ml-auto">
                            <li><a href="#">Dashboard</a></li>
                        </ol>
                    </div>
                </div>
            </div>

        </div>

        <div class="container-fluid">
            <!-- ============================================================== -->
            <!-- Three charts -->
            <!-- ============================================================== -->
            <div class="row justify-content-center">
                <div class="col-lg-4 col-sm-6 col-xs-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Accepted Request</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ml-auto"><span class="counter text-success">@Model.AcceptedRequest</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-xs-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Rejected Request</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash2">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ml-auto"><span class="counter text-purple">@Model.RejectedRequest</span></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-6 col-xs-12">
                    <div class="white-box analytics-info">
                        <h3 class="box-title">Pending Request</h3>
                        <ul class="list-inline two-part d-flex align-items-center mb-0">
                            <li>
                                <div id="sparklinedash3">
                                    <canvas width="67" height="30"
                                            style="display: inline-block; width: 67px; height: 30px; vertical-align: top;"></canvas>
                                </div>
                            </li>
                            <li class="ml-auto">
                                <span class="counter text-info">@Model.PendingRequest</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- Trending jobs -->
            <!-- ============================================================== -->
            <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                    <div class="white-box">
                        <h3 class="box-title">Trending Jobs</h3>
                        <div class="d-md-flex">
                            <ul class="list-inline d-flex ml-auto">
                                <li class="pl-3">
                                    <h5><i class="fa fa-circle m-r-5 text-info"></i>Web</h5>
                                </li>
                                <li class="pl-3">
                                    <h5><i class="fa fa-circle m-r-5 text-inverse"></i>IT</h5>
                                </li>
                            </ul>
                        </div>
                        <div id="ct-visits" style="height: 405px;">
                            <div class="chartist-tooltip" style="top: -17px; left: -12px;">
                                <span class="chartist-tooltip-value">6</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer text-center">
                2020 © Genesy brought to you by Chisom
            </footer>
        </div>
    </div>

    <!-- All Jquery -->
    <script src=@Url.Content("/Template/Dashboard/plugins/bower_components/jquery/dist/jquery.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/plugins/bower_components/popper.js/dist/umd/popper.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/bootstrap/dist/js/bootstrap.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/js/app-style-switcher.js")></script>
    <script src=@Url.Content("/Template/Dashboard/plugins/bower_components/jquery-sparkline/jquery.sparkline.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/js/waves.js")></script>
    <script src=@Url.Content("/Template/Dashboard/js/sidebarmenu.js")></script>
    <script src=@Url.Content("/Template/Dashboard/js/custom.js")></script>
    <script src=@Url.Content("/Template/Dashboard/plugins/bower_components/chartist/dist/chartist.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/plugins/bower_components/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.min.js")></script>
    <script src=@Url.Content("/Template/Dashboard/js/pages/dashboards/dashboard1.js")></script>


