@{ Layout = null;}
@model IEnumerable<RecruitingProject.Entity.Applicant>
@{
    ViewBag.Title = "GetAllPendingRequest";
}
@Html.Partial("_AdminHeader")

<table class="table table-bordered table-responsive-lg">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Status</th>
            <th scope="col">Accept</th>
            <th scope="col">Reject</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var pending in Model)
            {
              <tr>
                <td>@pending.FirstName</td>
                <td>@pending.LastName</td>
                <td>@pending.ApplicationStatus</td>
                <td>@Html.ActionLink("Accept", "Accept", "Applicant", new { id = pending.id }, new { @class = "btn btn-info" })</td>
                <td>@Html.ActionLink("Reject", "Reject", "Applicant", new { id = pending.id }, new { @class = "btn btn-danger" })</td>
              </tr>
            }
        }
        </tbody>
    </table>

@Html.Partial("_AdminFooter")


